@model DotNetCoders.Models.CategoryView
@{
    ViewBag.Title = "Show";
}

@section MyStyles
{
    <style>

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        th {
            background: darkslateblue;
            text-align: center;
            padding: 10px;
            color: azure;
        }

        td {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
}


<table>
    <tr>
        <th>Sl</th>
        <th>Code</th>
        <th>Name</th>        
        <th>Action</th>
    </tr>
    @{ int sl = 0;}
    @foreach (var std in Model.Categories)
    {
        using (Html.BeginForm("Show", "Category", new { id = std.Id, search = "" }, FormMethod.Post))
        {
            <tr>
                <td>@(++sl)</td>
                <td>@std.Code</td>
                <td>@std.Name</td>                
                <td>
                    @Html.ActionLink("Edit", "Add", "Category", new { @id = std.Id }, null) |
                    <input type="submit" value="Delete" onclick="return confirm('Are you want to delete Category @std.Name ')" />
                </td>
            </tr>
        }
    }
</table>




