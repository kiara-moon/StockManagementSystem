@model DotNetCoders.Models.ProductView
@{
    ViewBag.Title = "Show";
}
@section MyStyles
{
    <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }
    th {
        background: darkslateblue;
        text-align: center;
        padding: 10px;
        color: azure;
    }
    td {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 8px;
    }
    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style> 
}

    <table>
        <tr>
            <th>Sl</th>
            <th>Code</th>
            <th>Name</th>
            <th>Reorder Level</th>
            <th>Description</th>
            <th>Category</th>

            <th>Action</th>
        </tr>
        @{ int sl = 0;}
    
        @foreach (var std in Model.Products)
        {
            using (Html.BeginForm("Show", "Product", new { id = std.Id, search = "" }, FormMethod.Post))
            {
                <tr>
                    <td>@(++sl)</td>
                    <td>@std.Code</td>
                    <td>@std.Name</td>
                    <td>@std.ReorderLevel</td>
                    <td>@std.Description</td>
                    <td>@std.Category.Name</td>

                    <td>
                        @Html.ActionLink("Edit", "Add", "Product", new { @id = std.Id }, null) |
                        <input type="submit" value="Delete" onclick="return confirm('Do you want to delete product- @std.Name ')" />
                    </td>
                </tr>
            }
        }
    </table>
